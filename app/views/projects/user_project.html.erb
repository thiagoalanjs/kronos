<!-- TABLE -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Size</th>
              <th>Start date</th>
              <th>End date</th>
              <th>Local</th>
              <th style="width: 20%;">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td><%= project.size %></td>
              <td><%= project.start_date %></td>
              <td><%= project.end_date %></td>
              <td><%= project.local.name unless project.local.nil? %></td>
              <td>
                <% if current_project_id == project.id %>
                <%= link_to select_project_path(project.id), class: 'btn btn-success', title: 'Select project' do %>
                <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                <% end %>
                <% else %>
                <%= link_to select_project_path(project.id), class: 'btn btn-default', title: 'Select project' do %>
                <span class="glyphicon glyphicon-unchecked" aria-hidden="true"></span>
                <% end %>
                  
              </td>
            </tr>
            <% end %>
          </tbody>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- TABLE -->
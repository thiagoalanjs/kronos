

<p></p>


<div class="ui container">
  <% if current_user.group != 'admin' && current_user.group != 'coordenador' %>
    <h1>Projetos <%= image_tag("gerenciamento-de-projetos.png") %></h1>
    <hr>
    <p></p>

    <% if @projects.empty? %> 
        <div class="box_center">
            <%= image_tag("access-denied.png") %>
            <br />
            <br />
            <p class="access_deny">Você não possui nenhum projeto. Entre em contato com o administrador / PO.</p>
        </div>
    </div>
<% end %>
    <%= render 'projects/list_projects_default' %>
  <% else %>   
    
     
      <div class="info_accordion">
        <%= form_tag(projects_path, method: :get, class: "ui form") do %>
           <div class="inline field">
              <%= text_field_tag :search, params[:search], placeholder: "Buscar projetos" %>
              <%= image_submit_tag("search.png") %>
           </div>    
        <% end %>
      </div>
      <h1>Projetos</h1>
      <div class="sub_title">Aqui você cria e gerencia seus projetos.</div>
      <hr>
       
      


    <%= render 'projects/list_projects_admin' %> 


    <br />
      <%= paginate @projects %>  
    <br />
    <br />
    <br />
  <% end %>

</div>

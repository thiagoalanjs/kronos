<div class="container">
  <div class="row">
    <%= form_for(@user_ability) do |f| %>

      <% if @user_ability.errors.any? %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p><strong>Wops!</strong></p>
            <ul>
            <% @user_ability.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :points %>
          <%= f.number_field :points, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :user_id %>
                <%= f.collection_select(:user_id,User.all,:id,:email,{:prompt=>false},{class:'form-control'}) %>
              </div>
        
              <div class="form-group">
                <%= f.label :ability_id %>
                <%= f.collection_select(:ability_id,Ability.all,:id,:name,{:prompt=>false},{class:'form-control'}) %>
              </div>
        
              <div class="form-group">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    

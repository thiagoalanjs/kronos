<p></p>

<div class="ui container">
 
 <h1>Funções</h1>
      <div class="sub_title">Aqui você cria e gerencia as funções dos participantes dos projetos.</div>
      <hr>
  <table class="ui celled table">
    <thead>
      <tr>
                <th>Função</th>
                <th>Descrição</th>
                <th width="290">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @functions.each do |function| %>
        <tr>
            <td><%= function.name %></td>
            <td><%= function.description %></td>
            <td>
           
              <div class="ui buttons">
                  <%= link_to 'Editar', edit_function_path(function), class: 'ui blue button' %>
              </div>
              <div class="ui buttons">
                  <%= link_to 'Remover', function, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui red button' %>
              </div>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to "Nova", new_function_path, class: 'item ui blue button' %>
</div>
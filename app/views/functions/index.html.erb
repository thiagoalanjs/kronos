<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Função</strong></a>
    <%= link_to "Nova", new_function_path, class: 'item' %>
  </div>

  <table class="ui celled table">
    <thead>
      <tr>
                <th>Name</th>
                <th>Description</th>
                <th width="290">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @functions.each do |function| %>
        <tr>
            <td><%= function.name %></td>
            <td><%= function.description %></td>
            <td>
              <div class="ui buttons">
                  <%= link_to 'Exibir', function, class: 'ui blue button' %>
              </div>
              <div class="ui buttons">
                  <%= link_to 'Editar', edit_function_path(function), class: 'ui yellow button' %>
              </div>
              <div class="ui buttons">
                  <%= link_to 'Remover', function, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui red button' %>
              </div>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
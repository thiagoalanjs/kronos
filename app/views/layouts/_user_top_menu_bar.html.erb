<!-- Following Menu for user logged in -->
<div class="ui large top fixed no-hidden inverted menu">
<%= image_tag('logo.png', :class=>"logo menu")%>
  <div class="right menu">
    <%= link_to notifications_path, class: "#{is_current_page?(notifications_path)} item", title: 'Notificações' do %>
      <i class="alarm icon"></i>
      Notificações
      <% if Notification.unread_count(current_user) > 0 %>
        <div class="ui red label"><%= Notification.unread_count(current_user) %></div>
      <% else %>
        <div class="ui label">0</div>
      <% end %>
    <% end %>
    <div class="ui dropdown item">
      <i class="user icon"></i> 
           <% if current_user %>
             <% if current_user.avatar.attached? %>
             <%= image_tag(current_user.avatar_thumbnail, :title=> current_user.name, :class=> "image_thumbnail") %>
           <% else %>
             <%= image_tag("profile-user.png", :title=> current_user.name, :class=> "image_thumbnail") %>
           <% end %>
           <% end %>
      <i class="dropdown icon"></i>
      <div class="menu">
     
        <%= link_to edit_user_registration_path, class: 'item' do %>
          Editar perfil
        <% end %>

        <%= link_to destroy_user_session_path, method: :delete, class: 'item' do %>
          Sair
        <% end %>



        
      </div>
    </div>
  </div>
</div>
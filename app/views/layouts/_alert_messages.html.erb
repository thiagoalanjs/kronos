<!-- alert notification -->
<% if flash[:notice] %>
<p></p>
<div class="ui container">
  <div class="ui positive message">
  <div class="close icon">x</div>
    <p><%= flash[:notice] %></p>
    <p></p>
  </div>
</div>
<p></p>
<% end %>


<!-- alert success -->
<% if flash[:success] %>
<p></p>
<div class="ui container">
  <div class="ui positive message">
    <div class="close icon">X</div>
    <div class="header">
      Sucesso!
    </div>
    <p><%= flash[:success] %></p>
  </div>
</div>
<p></p>
<% end %>

<!-- alert success -->
<% if flash[:alert] %>
<p></p>
<div class="ui container">
  <div class="ui negative message">
    <div class="close icon">x</div>
    <div class="header">
      Ops!
    </div>
    <p><%= flash[:alert] %></p>
  </div>
</div>
<p></p>
<% end %>
<!-- alert notification -->
<% if notice %>
<p></p>
<div class="ui container">
  <div class="ui positive message">
  <div class="close icon">x</div>
    <p><%= notice %></p>
    <p></p>
  </div>
</div>
<p></p>
<% end %>

<!-- alert warning -->
<% if alert %>
<p></p>
<div class="ui warning container">
  <div class="ui message">
    <div class="close icon">X</div>
    <div class="header">
      Alerta!
    </div>
    <p><%= alert %></p>
  </div>
</div>
<p></p>
<% end %>

<!-- alert success -->
<% if flash[:success] %>
<p></p>
<div class="ui container">
  <div class="ui positive message">
    <div class="close icon">X</div>
    <div class="header">
      Sucesso!
    </div>
    <p><%= flash[:success] %></p>
  </div>
</div>
<p></p>
<% end %>

<!-- alert success -->
<% if flash[:alert] %>
<p></p>
<div class="ui container">
  <div class="ui negative message">
    <div class="close icon">x</div>
    <div class="header">
      Ops!
    </div>
    <p><%= flash[:alert] %></p>
  </div>
</div>
<p></p>
<% end %>
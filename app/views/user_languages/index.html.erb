<!-- TABLE -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
                            <th>Proficiency</th>
                            <th>User</th>
                            <th>Language</th>
                            <th style="width: 20%;">Ações</th>
            </tr>
          </thead>

          <tbody>
            <% @user_languages.each do |user_language| %>
              <tr>
                                <td><%= user_language.proficiency %></td>
                                <td><%= user_language.user %></td>
                                <td><%= user_language.language %></td>
                                <td>                    
                  <%= link_to user_language, class: 'btn btn-default', title: 'Exibir' do %>
                  <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                  <% end %>
                  <%= link_to edit_user_language_path(user_language), class: 'btn btn-default', title: 'Editar' do %>
                  <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                  <% end %>
                  <%= link_to "#modal-id-#{user_language.id}", class: 'btn btn-default', title: 'Remover', 'data-toggle': 'modal' do %>
                  <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                  <% end %>
                </td>
              </tr>
              <!-- MODAL -->
              <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
                <div class="modal fade" id="modal-id-<%= user_language.id %>">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Alerta!</h4>
                      </div>
                      <div class="modal-body">
                        <p>Deseja realmente remover <strong><%= user_language.proficiency %></strong>?</p>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                        <%= link_to 'Remover', user_language, method: :delete, class: 'btn btn-danger' %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <!-- /MODAL -->
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- /TABLE -->
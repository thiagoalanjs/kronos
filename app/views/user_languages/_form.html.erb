<div class="container">
  <div class="row">
    <%= form_for(@user_language) do |f| %>

      <% if @user_language.errors.any? %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p><strong>Wops!</strong></p>
            <ul>
            <% @user_language.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :proficiency %>
          <%= f.number_field :proficiency, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :user_id %>
          <%= f.text_field :user_id, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :language_id %>
          <%= f.text_field :language_id, class: 'form-control' %>
              </div>
        
              <div class="form-group">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    

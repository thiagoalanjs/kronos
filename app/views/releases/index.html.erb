<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Releases</strong></a>
    <%= link_to "Novo", new_release_path, class: 'item' %>
  </div>

  <%= render 'releases/breadcrumb' %>

  <table class="ui celled table">
    <thead>
      <tr>
        <th>Version</th>
        <th>Data de entrega</th>
        <th width="250">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @releases.each do |release| %>
        <tr>
          <td><%= release.version %></td>
          <td><%= release.deliver_date %></td>
          <td>
            <div class="ui buttons">
            <%= link_to 'Exibir', release, class: 'ui blue basic button' %>
            <%= link_to 'Editar', edit_release_path(release), class: 'ui blue basic button' %>
            <%= link_to 'Remover', release, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui red basic button' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
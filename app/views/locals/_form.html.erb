<%= form_for(@local, html: {class: 'ui form'}) do |f| %>

  <% if @local.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @local.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= f.label :name %>
    <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :country %>
    <%= f.text_field :country %>
    </div>

    <div class="field">
      <%= f.label :state %>
    <%= f.text_field :state %>
    </div>

    <div class="field">
      <%= f.label :city %>
    <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
    </div>

  <% end %>

<script type="text/javascript">
  $('.save').click(function(){
    $('form').submit();
  });

  $('.ui.search.dropdown').dropdown({ allowLabels:true});
</script>
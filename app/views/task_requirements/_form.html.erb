<div class="container">
  <div class="row">
    <%= form_for(@task_requirement) do |f| %>

    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :level %>
          <%= f.number_field :level, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :task_id %>
                <%= f.collection_select( :task_id, Task.where(user_story_id: current_project.user_stories.map { |user_story| user_story.id } ),:id,:description, {:prompt=>false},{class:'form-control'} ) %>
              </div>
        
              <div class="form-group">
                <%= f.label :ability_id %>
                <%= f.collection_select(:ability_id,Ability.all,:id,:name,{:prompt=>false},{class:'form-control'}) %>
              </div>
        
              <div class="form-group">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    

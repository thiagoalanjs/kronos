<div class="container">
  <br >
  <br >
  <div class="row"><h3>
    <%= form_for(@task) do |f| %>
      
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :title, class: 'p' %>
                <br />
                <%= f.text_field :title, class: 'field_input' %>
              </div>

              <div class="form-group">
                <%= f.label :description, class: 'p' %>
                <br />
                <%= f.text_area :description, class: 'field_input' %>
                <br />
              </div>
        
              <div class="form-group">
                <%= f.label :status, class: 'p' %>
                <br />

                  <%= f.select :status, options_for_select({'Pendente' => 1 , 'Desenvolvimento' => 2 , 'Code Review' => 3, 'QA' => 4 , 'ConcluÃ­da' => 5 }), {:prompt => false}, { :class => 'ui search dropdown', placeholder: 'Status' } %>
              </div>
        
              <div class="form-group">                
                <br />
                <%= f.label :user_story_id, class: 'p' %>
                <br />
                <%= f.collection_select(:user_story_id, current_project.user_stories, :id, :title, {:prompt=>false},{class:'field_input'}) %>
              
              </div>
        
            <div class="form-group">
                <br />
                <%= f.label :kind_id, class: 'p' %>
                <br />
                <%= f.select :kind_id, Kind.all.collect {|x| [x.name, x.id]}, {prompt: 'Selecionar o tipo de tarefa'}, class: "ui search dropdown" %>
              </div>
 
               <div class="form-group">
                <br />
                <%= f.label :priority_id, class: 'p' %>
                <br />
                <%= f.select :priority_id, Priority.all.collect {|x| [x.name, x.id]}, {prompt: 'Selecionar a prioridade da tarefa'}, class: "ui search dropdown" %>
              </div>
              <br />              
              <div class="ui buttons">
            <%= f.button type: 'submit', class: 'ui blue button' do %>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    

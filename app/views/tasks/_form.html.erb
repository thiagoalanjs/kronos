<div class="container">
  <div class="row">
    <%= form_for(@task) do |f| %>

      <% if @task.errors.any? %>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="alert alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <p><strong>Wops!</strong></p>
            <ul>
            <% @task.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :end_date %>
          <%= f.date_select :end_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :start_date %>
          <%= f.date_select :start_date, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :status %>
                <%= f.select :status, options_for_select([:pendent,:development,:completed]), {}, { :class => 'form-control' } %> 
              </div>
        
              <div class="form-group">
                <%= f.label :user_story_id %>
                <%= f.collection_select(:user_story_id,current_project.user_stories,:id,:description,{:prompt=>false},{class:'form-control'}) %>
              </div>
        
              <div class="form-group">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    

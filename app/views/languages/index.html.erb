<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Languages</strong></a>
    <%= link_to "Novo", new_language_path, class: 'item' %>
  </div>

  <table class="ui celled table">
    <thead>
      <tr>
                <th>Name</th>
                <th>Description</th>
                <th width="250">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @languages.each do |language| %>
        <tr>
                    <td><%= language.name %></td>
                    <td><%= language.description %></td>
                    <td>
            <div class="ui buttons">
            <%= link_to 'Exibir', language, class: 'ui blue basic button' %>
            <%= link_to 'Editar', edit_language_path(language), class: 'ui blue basic button' %>
            <%= link_to 'Remover', language, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui red basic button' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
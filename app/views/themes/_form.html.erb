<%= form_for(@theme, html: {class: 'ui form'}) do |f| %>

 <% if @theme.errors.any? %>

        <div class="ui negative message">
           <div class="close icon">x</div>
              <div class="header">
                <% @theme.errors.full_messages.each do |message| %>
                 <p> - <%= message %> </p>
                   <% end %>
              </div>
        </div>
       <p></p>
  <% end%>
    <div class="field">
      <%= f.hidden_field :project_id, :value => current_project.id %>
    </div>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

  <% end %>

<script type="text/javascript">
  $('.save').click(function(){
    $('form').submit();
  });

  $('.ui.search.dropdown').dropdown({ allowLabels:true });
</script>
<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Themes</strong></a>
    <%= link_to "Novo", new_theme_path, class: 'item' %>
  </div>

  <table class="ui celled table">
    <thead>
      <tr>
        <th>Projeto</th>
        <th>Nome</th>
        <th>Descrição</th>
        <th width="250">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @themes.each do |theme| %>
        <tr>
          <td><%= theme.project.name %></td>
          <td><%= theme.name %></td>
          <td><%= theme.description %></td>
          <td>
            <div class="ui buttons">
            <%= link_to 'Exibir', theme, class: 'ui blue basic button' %>
            <%= link_to 'Editar', edit_theme_path(theme), class: 'ui blue basic button' %>
            <%= link_to 'Remover', theme, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui red basic button' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
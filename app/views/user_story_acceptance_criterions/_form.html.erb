<div class="container">
  <div class="row">
    <%= form_for(@user_story_acceptance_criterion) do |f| %>

    <div class="col-xs-12 col-sm-8 col-md-6 col-lg-6">
              <div class="form-group">
                <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :status %>
          <%= f.number_field :status, class: 'form-control' %>
              </div>
        
              <div class="form-group">
                <%= f.label :user_story_id %>
                <%= f.collection_select(:user_story_id, current_project.user_stories,:id,:description,{:prompt=>false},{class:'form-control'}) %>
              </div>
        
              <div class="form-group">
          <%= f.button type: 'submit', class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>
            Salvar
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>    

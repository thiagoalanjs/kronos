<p></p>
<div id="loader"></div> 
<div class="container">
  <div>
  <br />
    <h2>Membros</h2>
    
  </div>



  <%= render 'function_user_projects/breadcrumb' %>
<br />

<div style="display:none;" id="myDiv" class="animate-bottom">
 <% if @function_user_projects.empty? %>
    <div class="box_center">
      <%= image_tag("teamwork.png") %>
      <br />
      <br />
      <p class="access_deny">Nenhum usuário está associado a esse projeto. Clique em "Associar" para incluí-lo no projeto.</p>
      <%= link_to "Associar", new_function_user_project_path, class: 'item green_button' %>
    </div>
  </div>
 <% else %>


   <%= link_to "Associar", new_function_user_project_path, class: 'item green_button' %>
  <br />
  <br />
  <table class="ui celled table">
    <thead>
      <tr>
                <th>Usuário</th>
                <th>Função</th>
                <th width="290">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @function_user_projects.each do |function_user_project| %> 
        <tr>

                    <td><%= function_user_project.user.name %> </td>
                    <td><%= function_user_project.function.name %></td>
                    <td>
      
           
              <%= link_to 'Editar', edit_function_user_project_path(function_user_project), class: 'blue_button' %>
          
            <%= link_to 'Remover', function_user_project, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'red_button' %>
          
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
</div>
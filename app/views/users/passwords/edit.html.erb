<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%= stylesheet_link_tag "login.css" %>
        <title>Kronos - Agile Management</title>
      
    </head>
    <body>
      <header>
            <%= image_tag("novo_logo.png", id: "logo") %>
      </header>
      
        <%= image_tag("Team work-amico.png", id: "image-left") %>
        <%= image_tag("Coworking-rafiki.png", id: "image-right") %>
        <div id="box-center">
		<br />
     <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
       <% if resource.errors.any? %>
               <div class="alert_danger">
                   <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
              <% resource.errors.full_messages.each do |message| %>
               <%= message %>
                <% end %>
              </div>
    <% end %>

     <%= f.hidden_field :reset_password_token %>

      <div>

        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Nova senha - mÃ­nimo 4 caracteres" %>
     </div>
    
      <div>
         <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmar senha" %>
      </div>

      
      <%= f.submit "Alterar senha", id: "button"%>
        
    <% end %>

    <p></p>
    <p></p>
    <p></p>

 

  
    </body>
</html>







<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <%= stylesheet_link_tag "login.css" %>
        <title>Kronos - Agile Management</title>
      
    </head>
    <body>
      <header>
            <%= image_tag("novo_logo.png", id: "logo") %>
      </header>
      
        <%= image_tag("Team work-amico.png", id: "image-left") %>
        <%= image_tag("Coworking-rafiki.png", id: "image-right") %>
        <div id="box-center">
		<br />
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>	
       <% if resource.errors.any? %>
               <div class="alert_danger">
                   <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
              <% resource.errors.full_messages.each do |message| %>
               <%= message %>
                <% end %>
              </div>
    <% end %>
		
            <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            <%= link_to "Voltar para a tela de Login", user_session_path %>

            <%= f.submit "Recuperar de senha", id: "button" %>
        </div>

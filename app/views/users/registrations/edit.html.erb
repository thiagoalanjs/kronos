   <div class="form_devise">
          <br />
          <div class="header_text">Editar perfil</div>
          <br />
    
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  

     <% if resource.errors.any? %>
      <div class="ui container">
        <div class="ui negative message">
           <div class="close icon">x</div>
              <div class="header">
                <p> - <%= devise_error_messages! %></p>
              </div>
         </div>
       <p></p>
     <% end%>

           <% if current_user %>
            <% if current_user.avatar.attached? %>
            <%= image_tag(current_user.avatar_thumbnail, :class=> "image_profile") %>
           <% else %>
            <%= image_tag("profile-user.png", :class=> "image_profile") %>
           <% end %>
           <% end %>
         
          <div>
            <%= f.file_field :avatar %>
          </div>
    
          <div>
              <%= f.label "Nome", class: "p" %><br />
              <%= f.text_field :name, autofocus: true, class: "field_input" %>
          </div>
    
          <div>
            <%= f.label "Email", class: "p" %><br />
           <%= f.email_field :email, autofocus: true, class: "field_input" %>
          </div>
    
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <>Aguardando a confirmação de: <%= resource.unconfirmed_email %></div>
          <% end %>
    
          <div>
            <%= f.label "Senha", class: "p" %> <b class="sub_text">(Deixe a senha em branco caso não queira alterá-la)</b>
            <br />
            <%= f.password_field :password, placeholder: "Digite sua senha", autocomplete: "off", class: "field_input" %>
          </div>
    
          <div>
            <%= f.label "Confirmação de senha", class: "p" %>
           <br />
           <%= f.password_field :password_confirmation, placeholder: "Digite a nova senha", autocomplete: "off", class: "field_input" %>
          </div>
    
          <div>
            <%= f.label "Senha atual", class: "p" %> <b class="sub_text">(Digite sua senha atual para confirmar as mudanças)</b>
            <br />
            <%= f.password_field :current_password, autocomplete: "off", class: "field_input"  %>
          </div>
    
          <div>
            <%= f.submit "Alterar", class: "button_change_devise" %>
          </div>
         
          <% end %>
    
    </div>
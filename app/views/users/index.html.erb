<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Users</strong></a>
    <%= link_to "Novo", new_user_path, class: 'item' %>
  </div>

  <table class="ui celled table">
    <thead>
      <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Grupo</th>
                <th width="290">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.group %></td>
          <td>
            <div class="ui buttons">
              <%= link_to 'Exibir', user, class: 'ui blue button' %>
            </div>
            <div class="ui buttons">
               <%= link_to 'Editar', edit_user_path(user), class: 'ui blue button' %>
            </div>
            <div class="ui buttons">
            <%= link_to 'Remover', user, method: :delete, data: { confirm: "Você tem certeza deletar o(a) usuário(a) #{ user.name } ?"}, class: 'ui red button' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
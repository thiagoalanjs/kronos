<p></p>

<div class="ui container">
  <div class="info_accordion">
        <%= form_tag(users_path, method: :get, class: "ui form") do %>
           <div class="inline field">
              <%= text_field_tag :search, params[:search], placeholder: "Buscar usuários" %>
              <%= image_submit_tag("search.png", id: "btn_seach") %>
           </div>    
        <% end %>
      </div>
      <h1>Usuários</h1>
      <div class="sub_title">Aqui você cria e gerencia acessos dos usuários no seu projeto.</div>
      <hr>
 <br />      
<%= link_to "Novo", new_user_path, class: 'item ui blue button', id: "btn_new_user" %>

  <table class="ui celled table">
    <thead>
      <tr>
          <th>Nome</th>
          <th>Email</th>
          <th>Grupo</th>
          <th width="250">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.group %></td>
          <td>
            <div class="ui buttons">
               <%= link_to 'Editar', edit_user_path(user), class: 'ui blue button' %>
            </div>
            <div class="ui buttons">
            <%= link_to 'Remover', user, method: :delete, data: { confirm: "Você tem certeza deletar o(a) usuário(a) #{ user.name } ?"}, class: 'ui red button' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
<br />
      <%= paginate @users %>  
    <br />
    <br />

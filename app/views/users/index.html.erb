<p></p>

<div class="ui container">
  <div class="ui menu"">
    <a href="#" class="item active"><strong>Users</strong></a>
    <%= link_to "Novo", new_user_path, class: 'item' %>
  </div>

  <table class="ui celled table">
    <thead>
      <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Schedule</th>
                <th>Group</th>
                <th>Local</th>
                <th width="250">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.schedule %></td>
                    <td><%= user.group %></td>
                    <td><%= user.local.name unless user.local.nil? %></td>
                    <td>
            <div class="ui buttons">
            <%= link_to 'Exibir', user, class: 'ui blue basic button' %>
            <%= link_to 'Editar', edit_user_path(user), class: 'ui blue basic button' %>
            <%= link_to 'Remover', user, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'ui red basic button' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
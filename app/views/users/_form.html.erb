<%= form_for(@user, html: {class: 'ui form'}) do |f| %>


  <% if @user.errors.any? %>
    <div class="alert_notice_error">
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <br />
  <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="field">
      <%= f.label :group %>
      <%= f.select :group, options_for_select([:admin,:coordenador,:analista]), {}, { :class => 'form-control' } %> 
    </div>

  <% end %>

<script type="text/javascript">
  $('.save').click(function(){
    $('form').submit();
  });

  $('.ui.search.dropdown').dropdown({ allowLabels:true});
</script>
<div class="img_background">
<div class="logo form">
      <%= image_tag("logo.png") %>
  </div>
<div class="ui centered grid container ">

  <div class="six wide column form_box">
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui form'}) do |f| %>

    <% if alert %>
      <div class="ui container">
        <div class="ui negative message">
           <div class="close icon">x</div>
              <div class="header">
           <p><%= alert %></p>
          </div>
         </div>
       <p></p>
    <% end%>

      <div class="field">
        <%= f.label "Email" %>
        <%= f.email_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label "Senha" %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Entrar", class: 'ui button teal', id: "btn_entrar" %>
      </div>

    <% end %>

    <p></p>
    <p></p>
    <p></p>
         <%= link_to "Esqueceu a senha?", new_password_path(resource_name)  %>
 
  </div>
 
 </div>
    <br />
     <br />
       <br />
         <br />
           <br />
</div>
